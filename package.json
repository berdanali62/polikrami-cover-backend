{
  "name": "coverpolikrami-backend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "test": "jest --runInBand",
    "test:unit": "jest --testPathPattern=test/unit --runInBand",
    "test:integration": "jest --testPathPattern=test/integration --runInBand",
    "test:performance": "jest --testPathPattern=test/performance --runInBand",
    "test:e2e": "jest --testPathPattern=test/.*\\.e2e\\.test\\.ts --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:load": "npm run test:performance",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "cleanup:email-queue": "tsx src/scripts/cleanup-email-queue.ts",
    "cleanup:ai-tmp": "tsx src/scripts/cleanup-tmp-ai.ts",
    "doc:pdf": "md-to-pdf src/docs/SECURITY_HASHING_SPEC.md",
    "build:pkg:argon2": "npm --prefix packages/argon2id-hashing run build",
    "pack:pkg:argon2": "npm --prefix packages/argon2id-hashing pack",
    "db:seed:locations": "tsx src/scripts/seed-locations.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "@sentry/node": "^8.15.0",
    "@sentry/profiling-node": "^8.15.0",
    "argon2": "^0.40.1",
    "bullmq": "^5.9.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.6.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.2",
    "iyzipay": "^2.0.64",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.9",
    "pino": "^9.3.0",
    "pino-pretty": "^11.2.2",
    "prom-client": "^15.1.1",
    "rate-limiter-flexible": "^5.0.0",
    "sharp": "^0.33.4",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.10.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.14.9",
    "@types/nodemailer": "^6.4.16",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "md-to-pdf": "^5.2.4",
    "prettier": "^3.3.3",
    "prisma": "^5.16.1",
    "prisma-erd-generator": "^2.1.0",
    "supertest": "^6.3.4",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.5.4",
    "yamljs": "^0.3.0"
  }
}
